<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_350sdp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/id"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_150sdp"
            android:src="@drawable/lawyer"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20sdp"
            android:layout_alignParentBottom="true"
            android:text="Welcome to Lawyer's Diary"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>

    </RelativeLayout>


    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/lawyer_continue_button"
        android:id="@+id/client_continue_button"
        android:layout_marginBottom="30dp"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:elevation="30dp"
        android:text="I'm a Client"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/client_button_background"/>


    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:textAllCaps="false"
        android:elevation="30dp"
        android:id="@+id/lawyer_continue_button"
        android:text="I'm a Lawyer"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:background="@drawable/button_background"/>

</RelativeLayout>