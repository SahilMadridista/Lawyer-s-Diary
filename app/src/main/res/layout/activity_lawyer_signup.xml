<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LawyerSignUp"
    android:background="#E7DFDF">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/lawyer_signup_toolbar"
        android:theme="@style/ToolBarStyle"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:background="@drawable/layout_background">

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details of the Lawyer"
        android:layout_below="@id/lawyer_signup_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="17dp"
        android:id="@+id/header_text"
        android:textColor="@color/red"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:inputType="textCapWords"
        android:id="@+id/name_edit_text"
        android:hint="Enter full Name"
        android:drawableLeft="@drawable/name_icon"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/header_text"
        android:layout_marginTop="40dp"
        android:background="@drawable/edittext_background"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"
        android:paddingRight="10dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:inputType="phone"
        android:id="@+id/phone_edit_text"
        android:hint=" Enter Phone Number"
        android:drawableLeft="@drawable/phone_icon"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:paddingRight="10dp"
        android:layout_below="@id/name_edit_text"
        android:background="@drawable/edittext_background"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:inputType="textEmailAddress"
        android:hint="Enter Email address"
        android:id="@+id/email_edit_text"
        android:drawableLeft="@drawable/email_icon"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:paddingRight="10dp"
        android:layout_below="@id/phone_edit_text"
        android:background="@drawable/edittext_background"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:hint="Enter Password"
        android:id="@+id/password_edit_text"
        android:layout_marginTop="30dp"
        android:paddingRight="10dp"
        android:drawableLeft="@drawable/password_icon"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/email_edit_text"
        android:background="@drawable/edittext_background"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_edit_text"
        android:text="Show Password"
        android:id="@+id/registercheckbox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/red"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/registercheckbox"
        android:background="#E7DFDF"
        android:layout_above="@id/sign_up_button">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Already have an account ? Click to Login"
            android:layout_centerInParent="true"
            android:textColor="@color/red"
            android:id="@+id/login_text_view"/>

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/client_staff_bg"
        android:text="Sign Up"
        android:id="@+id/sign_up_button"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp"/>



</RelativeLayout>