<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourtScenes">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/court_scenes_toolbar"
        android:theme="@style/ToolBarStyle"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:background="@drawable/layout_background">

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_date_layout"
        android:orientation="horizontal"
        android:layout_below="@id/court_scenes_toolbar">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/edittext_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Client's name"
                android:id="@+id/client_name_header"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_margin="10dp"
                android:id="@+id/client_name_add_scene"
                android:layout_below="@id/client_name_header"/>


        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/edittext_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Case Starting Date"
                android:textSize="13sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:id="@+id/case_start_date_text"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/case_start_date_text"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:id="@+id/case_start_date_add_scene"/>


        </RelativeLayout>


    </LinearLayout>









    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/name_date_layout"
        android:layout_centerHorizontal="true"
        android:id="@+id/assignedlawyerlayout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:id="@+id/assigned_lawyer"
            android:hint="Lawyer Assigned"
            android:gravity="center"
            android:inputType="textCapWords"/>

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:id="@+id/dates_layout"
        android:layout_below="@id/assignedlawyerlayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_background"
            android:layout_weight="1">

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/current_date_layout"
                android:layout_margin="20dp"
                android:layout_centerInParent="true">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Hearing Date"
                    android:gravity="center"
                    android:inputType="date"
                    android:id="@+id/current_date_edittext"/>

            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_background"
            android:layout_weight="1">

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/next_date_layout"
                android:layout_margin="20dp"
                android:layout_centerInParent="true">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Next Date"
                    android:gravity="center"
                    android:inputType="date"
                    android:id="@+id/next_date_edittext"/>

            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

    </LinearLayout>


    <EditText
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@id/dates_layout"
        android:background="@drawable/edittext_background"
        android:layout_centerHorizontal="true"
        android:id="@+id/what_happened_edittext"
        android:hint="What Happened in Court ?"
        android:singleLine="false"
        android:textSize="13dp"
        android:gravity="start"
        android:padding="10dp"
        android:lines="8"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/what_happened_edittext"
        android:layout_above="@id/add_info_button">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:padding="30dp"
            android:text="Fill this information carefully because this will be visible to your Client"
            android:textColor="@color/colorPrimaryDark"/>


    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:text="Add Information"
        android:id="@+id/add_info_button"
        android:textAllCaps="false"/>


</RelativeLayout>